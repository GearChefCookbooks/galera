[mysqld]

#mysql settings

default-storage-engine=innodb
query_cache_size=0
query_cache_type=0
bind-address=0.0.0.0
binlog_format = <%= node['mysql']['tunable']['binlog_format'] %>
innodb_autoinc_lock_mode = <%= node['mysql']['tunable']['autoinc_lock_mode'] %>

#galera settings

wsrep_provider = <%= node['wsrep']['provider'] %>
wsrep_sst_method = <%= node['wsrep']['sst_method'] %>
wsrep_cluster_name = "<%= node['wsrep']['cluster_name'] %>"
wsrep_cluster_address = "gcomm://<%= node['wsrep']['cluster_nodes'] %>"

